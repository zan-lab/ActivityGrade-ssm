<!--        <property name="jdbcUrl" value="jdbc:mysql://121.36.94.205:3306/zsdhdpf?useUnicode=yes&amp;characterEncoding=utf8&amp;useAffectedRows=true"/>-->
<!--        <property name="user" value="zsdhdpf"/>-->
<!--        <property name="password" value="zsdhdpf"/>-->
<!--    </bean>-->
<!--    本地环境使用这个-->
    <bean id="dataSourceDebug" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="driverClass" value="com.mysql.jdbc.Driver"/>
        <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/zsdhdpf?useUnicode=yes&amp;characterEncoding=utf8&amp;useAffectedRows=true"/>
        <property name="user" value="root"/>
        <property name="password" value="fay123456"/>
    </bean>

    <!--配置SqlSessionFactory工厂-->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSourceDebug" />
    </bean>

    <!--配置Dao接口所在包-->
    <bean id="mapperScanner" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.zanlab.grade.dao"/>
    </bean>
</beans>